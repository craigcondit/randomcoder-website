<config xmlns="http://www.ehcache.org/v3" xmlns:jcache="http://www.ehcache.org/v3/jsr107">

	<service>
		<jcache:defaults>
			<jcache:cache name="default" template="defaultTemplate" />
		</jcache:defaults>
	</service>

	<cache-template name="defaultTemplate">
		<expiry>
			<ttl unit="seconds">120</ttl>
		</expiry>
		<heap unit="entries">1000</heap>
	</cache-template>

	<!-- Read-only bean mappings -->

	<cache alias="org.randomcoder.db.Role">
		<expiry>
			<ttl unit="seconds">7200</ttl>
		</expiry>
		<heap unit="entries">100</heap>
	</cache>

	<!-- Read/write bean mappings -->

	<cache alias="org.randomcoder.db.Article">
		<expiry>
			<ttl unit="seconds">3600</ttl>
		</expiry>
		<heap unit="entries">100</heap>
	</cache>

	<cache alias="org.randomcoder.db.Comment">
		<expiry>
			<ttl unit="seconds">3600</ttl>
		</expiry>
		<heap unit="entries">1000</heap>
	</cache>

	<cache alias="org.randomcoder.db.CommentReferrer">
		<expiry>
			<ttl unit="seconds">3600</ttl>
		</expiry>
		<heap unit="entries">1000</heap>
	</cache>

	<cache alias="org.randomcoder.db.CommentIp">
		<expiry>
			<ttl unit="seconds">3600</ttl>
		</expiry>
		<heap unit="entries">1000</heap>
	</cache>

	<cache alias="org.randomcoder.db.CommentUserAgent">
		<expiry>
			<ttl unit="seconds">3600</ttl>
		</expiry>
		<heap unit="entries">1000</heap>
	</cache>

	<cache alias="org.randomcoder.db.User">
		<expiry>
			<ttl unit="seconds">3600</ttl>
		</expiry>
		<heap unit="entries">1000</heap>
	</cache>

	<cache alias="org.randomcoder.db.Tag">
		<expiry>
			<ttl unit="seconds">3600</ttl>
		</expiry>
		<heap unit="entries">1000</heap>
	</cache>

	<!-- Collection mappings -->

	<cache alias="org.randomcoder.db.Article.tags">
		<expiry>
			<ttl unit="seconds">3600</ttl>
		</expiry>
		<heap unit="entries">100</heap>
	</cache>

	<cache alias="org.randomcoder.db.Article.comments">
		<expiry>
			<ttl unit="seconds">3600</ttl>
		</expiry>
		<heap unit="entries">1000</heap>
	</cache>

	<cache alias="org.randomcoder.db.User.roles">
		<expiry>
			<ttl unit="seconds">3600</ttl>
		</expiry>
		<heap unit="entries">100</heap>
	</cache>

	<!-- Query mappings -->

	<cache alias="default-query-results-region">
		<expiry>
			<ttl unit="seconds">3600</ttl>
		</expiry>
		<heap unit="entries">1000</heap>
	</cache>

	<cache alias="default-update-timestamps-region">
		<expiry>
			<ttl unit="seconds">3600</ttl>
		</expiry>
		<heap unit="entries">1000</heap>
	</cache>

	<!-- method caches -->

	<cache alias="org.randomcoder.MAVEN_REPOSITORY_CACHE">
		<expiry>
			<ttl unit="seconds">3600</ttl>
		</expiry>
		<heap unit="entries">1</heap>
	</cache>

	<cache alias="org.randomcoder.LEGACY_REPOSITORY_CACHE">
		<expiry>
			<ttl unit="seconds">86400</ttl>
		</expiry>
		<heap unit="entries">1</heap>
	</cache>

</config>
