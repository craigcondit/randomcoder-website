<?xml version="1.0" encoding="UTF-8"?>
<beans
		xmlns="http://www.springframework.org/schema/beans"
		xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
		xsi:schemaLocation="
			http://www.springframework.org/schema/beans
			http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">
	
	<bean id="mavenRepository" class="com.randomcoder.download.maven.LocalMavenRepository">
		<property name="url" value="http://randomcoder.com/maven/repository/release/" />
		<property name="dir" ref="mavenRepositoryDir" />
		<property name="projects">
			<list>
				<bean class="com.randomcoder.download.maven.MavenProject">
					<property name="projectName" value="randomcoder-website" />
					<property name="projectDescription" value="Randomcoder.com web site" />
					<property name="directory" value="com/randomcoder/randomcoder-website" />
					<property name="extensionMappings">
						<map>
							<entry key="-src.tar.bz2" value="src" />
							<entry key="-src.tar.gz" value="src" />
							<entry key="-src.zip" value="src" />
							<entry key="-javadoc.jar" value="javadoc" />
						</map>
					</property>
				</bean>
				<bean class="com.randomcoder.download.maven.MavenProject">
					<property name="projectName" value="randomcoder-taglibs" />
					<property name="projectDescription" value="JSP tag libraries for common website functionality" />
					<property name="directory" value="com/randomcoder/randomcoder-taglibs" />					
					<property name="extensionMappings">
						<map>
							<entry key=".jar" value="jar" />
							<entry key="-src.tar.bz2" value="src" />
							<entry key="-src.tar.gz" value="src" />
							<entry key="-src.zip" value="src" />
							<entry key="-javadoc.jar" value="javadoc" />
							<entry key="-tlddoc.jar" value="tlddoc" />
						</map>
					</property>
				</bean>
			</list>
		</property>
	</bean>
	
	<bean id="legacyRepository" class="com.randomcoder.download.http.LocalHttpRepository">
		<property name="projects">
			<list>
				<bean class="com.randomcoder.download.http.LocalHttpProject">
					<property name="projectName" value="randomcoder-taglibs" />
					<property name="projectDescription" value="JSP tag libraries for common website functionality" />
					<property name="baseUrl" value="http://randomcoder.com/projects/taglibs/" />
					<property name="baseDir" ref="taglibsRepositoryDir" />
					<property name="baseName" value="randomcoder-taglibs" />
					<property name="extensionMappings">
						<map>
							<entry key=".jar" value="jar" />
							<entry key="-src.tar.gz" value="src" />
							<entry key="-src.zip" value="src" />
							<entry key="-doc.jar" value="javadoc" />
							<entry key="-tlddoc.jar" value="tlddoc" />
						</map>
					</property>
					<property name="versions">
						<list>
							<value>1.0.0</value>
							<value>1.1.0</value>
							<value>1.1.1</value>
							<value>1.1.2</value>
							<value>1.1.3</value>
							<value>1.2.0</value>
							<value>1.3.0</value>
							<value>1.3.1</value>
							<value>1.3.2</value>
							<value>1.3.3</value>
							<value>1.4.0</value>
							<value>1.5.0</value>
							<value>1.5.1</value>
						</list>
					</property>
				</bean>
				<bean class="com.randomcoder.download.http.LocalHttpProject">
					<property name="projectName" value="randomcoder-citadel" />
					<property name="projectDescription" value="Java security framework (deprecated)" />
					<property name="baseUrl" value="http://randomcoder.com/projects/citadel/" />
					<property name="baseDir" ref="citadelRepositoryDir" />
					<property name="baseName" value="randomcoder-citadel" />
					<property name="extensionMappings">
						<map>
							<entry key=".jar" value="jar" />
							<entry key="-src.tar.gz" value="src" />
							<entry key="-src.zip" value="src" />
							<entry key="-doc.jar" value="javadoc" />
						</map>
					</property>
					<property name="versions">
						<list>
							<value>1.0.0</value>
							<value>1.0.1</value>
							<value>1.0.2</value>
							<value>1.0.3</value>
							<value>1.0.4</value>
							<value>1.0.6</value>
							<value>1.0.7</value>
							<value>1.0.8</value>
							<value>1.0.9</value>
						</list>
					</property>
				</bean>
			</list>
		</property>
	</bean>
	
	<!-- aggregate repositories -->	
	<bean id="packageListProducer" class="com.randomcoder.download.AggregatePackageListProducer">
		<property name="producers">
			<list>
				<ref local="cachingMavenRepository" />
				<ref local="cachingLegacyRepository" />
			</list>
		</property>
	</bean>	
	
	<!-- caching -->	
	<bean id="cachingMavenRepository" class="com.randomcoder.download.cache.CachingPackageListProducer">
		<property name="target" ref="mavenRepository" />
		<property name="cache">
			<bean class="org.springframework.cache.ehcache.EhCacheFactoryBean">
				<property name="cacheName" value="com.randomcoder.MAVEN_REPOSITORY_CACHE" />
			</bean>
		</property>
		<property name="cacheKey" value="mavenRepository" />
	</bean>

	<bean id="cachingLegacyRepository" class="com.randomcoder.download.cache.CachingPackageListProducer">
		<property name="target" ref="legacyRepository" />
		<property name="cache">
			<bean class="org.springframework.cache.ehcache.EhCacheFactoryBean">
				<property name="cacheName" value="com.randomcoder.LEGACY_REPOSITORY_CACHE" />
			</bean>
		</property>
		<property name="cacheKey" value="legacyRepository" />
	</bean>
	
	<!-- timer tasks to keep caches refreshed -->
	<bean id="repositoryRefreshTimer" class="org.springframework.scheduling.timer.TimerFactoryBean">
		<property name="scheduledTimerTasks">
			<list>
				<ref bean="mavenRepositoryRefreshTask" />
				<ref bean="legacyRepositoryRefreshTask" />
			</list>
		</property>
	</bean>
	
	<bean id="mavenRepositoryRefreshTask" class="org.springframework.scheduling.timer.ScheduledTimerTask">
		<property name="delay" value="30000" /> <!-- 30 seconds -->
		<property name="period" value="1800000" /> <!-- 30 minutes -->
		<property name="fixedRate" value="false" />
		<property name="timerTask">
			<bean class="org.springframework.scheduling.timer.MethodInvokingTimerTaskFactoryBean">
				<property name="targetObject" ref="cachingMavenRepository" />
				<property name="targetMethod" value="refresh" />
			</bean>
		</property>
	</bean>

	<bean id="legacyRepositoryRefreshTask" class="org.springframework.scheduling.timer.ScheduledTimerTask">
		<property name="delay" value="30000" /> <!-- 30 seconds -->
		<property name="period" value="43200000" /> <!-- 12 hours -->
		<property name="fixedRate" value="false" />
		<property name="timerTask">
			<bean class="org.springframework.scheduling.timer.MethodInvokingTimerTaskFactoryBean">
				<property name="targetObject" ref="cachingLegacyRepository" />
				<property name="targetMethod" value="refresh" />
			</bean>
		</property>
	</bean>
	
</beans>